// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id          Int      @id @default(autoincrement())
  email       String   @unique
  name        String
  password    String
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  memberships Member[]
  createdSplits Group[] @relation(name: "groupCreatedBy")
}

// TODO : Add on Delete Cascade on splits delete when stopping using SQLite
model Member {
  id            Int      @id @default(autoincrement())
  name          String
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
  user          User?     @relation(fields: [userId], references: [id])
  userId        Int?
  splits        Group[]
  spent         Spending[]
  owes          Owing[]
}

model Group {
  id          Int @id @default(autoincrement())
  name        String
  description String
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  creator     User  @relation(fields: [createdBy], references: [id], name: "groupCreatedBy")
  createdBy   Int
  members     Member[]
  spending    Spending[]
}

model Spending {
  id          Int @id @default(autoincrement())
  name        String
  description String
  amount      Float
  group       Group @relation(fields: [groupId], references: [id])
  groupId     Int
  madeBy      Member @relation(fields: [madeById], references: [id])
  madeById    Int
  splittedIn  Owing[]
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model Owing {
  id          Int @id @default(autoincrement())
  value       Float
  from        Spending @relation(fields: [spendingId], references: [id])
  spendingId  Int
  paidBy      Member  @relation(fields: [paidById], references: [id])
  paidById    Int
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}